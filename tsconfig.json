{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["ES2022"],
    "types": ["jest", "node", "vscode"]
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist", "out"]
}